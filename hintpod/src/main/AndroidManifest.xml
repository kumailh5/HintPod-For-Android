<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kumail.hintpod">

    <application>
        <activity
            android:name="com.kumail.hintpod.activities.MainActivity"
            android:label="@string/hintpod_app_name"
            android:theme="@style/HintPodTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kumail.hintpod.activities.SuggestionDetailedActivity"
            android:label="@string/hintpod_app_name"
            android:theme="@style/HintPodTheme">
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>


    </application>

    <uses-permission android:name="android.9permission.INTERNET" />

</manifest>